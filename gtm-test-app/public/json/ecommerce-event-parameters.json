{
  "events": {
    "view_item_list": [
      {
        "name": "item_list_id",
        "type": "text",
        "label": "Item List ID",
        "placeholder": "e.g. spring_collection_2026",
        "defaultValue": "spring_collection_2026",
        "required": false
      },
      {
        "name": "item_list_name",
        "type": "text",
        "label": "Item List Name",
        "placeholder": "e.g. Spring Collection 2026",
        "defaultValue": "Spring Collection 2026",
        "required": false
      }
    ],

    "select_item": [
      {
        "name": "item_list_id",
        "type": "text",
        "label": "Item List ID",
        "placeholder": "e.g. spring_collection_2026",
        "defaultValue": "spring_collection_2026",
        "required": false
      },
      {
        "name": "item_list_name",
        "type": "text",
        "label": "Item List Name",
        "placeholder": "e.g. Spring Collection 2026",
        "defaultValue": "Spring Collection 2026",
        "required": false
      },
      {
        "name": "index",
        "type": "number",
        "label": "Item Position",
        "placeholder": "e.g. 1",
        "defaultValue": 1,
        "required": false
      }
    ],

    "view_item": [
      {
        "name": "currency",
        "type": "select",
        "label": "Currency",
        "placeholder": "Select currency",
        "defaultValue": "EUR",
        "required": true,
        "options": "currency_options"
      },
      {
        "name": "value",
        "type": "number",
        "label": "Product Price",
        "placeholder": "e.g. 199.99",
        "defaultValue": 199.99,
        "required": false
      }
    ],

    "add_to_cart": [
      {
        "name": "currency",
        "type": "select",
        "label": "Currency",
        "placeholder": "Select currency",
        "defaultValue": "EUR",
        "required": true,
        "options": "currency_options"
      },
      {
        "name": "value",
        "type": "number",
        "label": "Added Value",
        "placeholder": "e.g. 199.99",
        "defaultValue": 199.99,
        "required": false
      }
    ],

    "remove_from_cart": [
      {
        "name": "currency",
        "type": "select",
        "label": "Currency",
        "placeholder": "Select currency",
        "defaultValue": "EUR",
        "required": true,
        "options": "currency_options"
      },
      {
        "name": "value",
        "type": "number",
        "label": "Removed Value",
        "placeholder": "e.g. 199.99",
        "defaultValue": 199.99,
        "required": false
      }
    ],

    "view_cart": [
      {
        "name": "currency",
        "type": "select",
        "label": "Currency",
        "placeholder": "Select currency",
        "defaultValue": "EUR",
        "required": true,
        "options": "currency_options"
      },
      {
        "name": "value",
        "type": "number",
        "label": "Cart Total",
        "placeholder": "e.g. 399.98",
        "defaultValue": 399.98,
        "required": false
      }
    ],

    "begin_checkout": [
      {
        "name": "currency",
        "type": "select",
        "label": "Currency",
        "placeholder": "Select currency",
        "defaultValue": "EUR",
        "required": true,
        "options":"currency_options"
      },
      {
        "name": "value",
        "type": "number",
        "label": "Checkout Value",
        "placeholder": "e.g. 399.98",
        "defaultValue": 399.98,
        "required": false
      },
      {
        "name": "coupon",
        "type": "text",
        "label": "Coupon Code",
        "placeholder": "e.g. SPRINGSALE10",
        "defaultValue": "SPRINGSALE10",
        "required": false
      }
    ],

    "add_shipping_info": [
      {
        "name": "shipping_tier",
        "type": "select",
        "label": "Shipping Method",
        "placeholder": "Select shipping option",
        "defaultValue": "standard",
        "required": false,
        "options": [
          { "label": "Standard Delivery", "value": "standard" },
          { "label": "Express Delivery", "value": "express" },
          { "label": "Click & Collect", "value": "pickup" }
        ]
      }
    ],

    "add_payment_info": [
      {
        "name": "payment_type",
        "type": "select",
        "label": "Payment Method",
        "placeholder": "Select payment method",
        "defaultValue": "credit_card",
        "required": false,
        "options": [
          { "label": "Credit Card", "value": "credit_card" },
          { "label": "PayPal", "value": "paypal" },
          { "label": "SEPA Direct Debit", "value": "sepa" }
        ]
      }
    ],

    "purchase": [
      {
        "name": "transaction_id",
        "type": "text",
        "label": "Transaction ID",
        "placeholder": "Auto-generated order ID",
        "defaultValue": "EU-ORD-2026-0001",
        "required": true,
        "disabled": true
      },
      {
        "name": "affiliation",
        "type": "text",
        "label": "Store Name",
        "placeholder": "e.g. Euro Department Store",
        "defaultValue": "Euro Department Store",
        "required": false
      },
      {
        "name": "currency",
        "type": "select",
        "label": "Currency",
        "placeholder": "Select currency",
        "defaultValue": "EUR",
        "required": true,
        "options": "currency_options"
      },
      {
        "name": "value",
        "type": "number",
        "label": "Order Total",
        "placeholder": "e.g. 409.98",
        "defaultValue": 409.98,
        "required": true
      },
      {
        "name": "tax",
        "type": "number",
        "label": "VAT Amount",
        "placeholder": "e.g. 32.00",
        "defaultValue": 32.00,
        "required": false
      },
      {
        "name": "shipping",
        "type": "number",
        "label": "Shipping Cost",
        "placeholder": "e.g. 10.00",
        "defaultValue": 10.00,
        "required": false
      },
      {
        "name": "coupon",
        "type": "text",
        "label": "Coupon Code",
        "placeholder": "e.g. SPRINGSALE10",
        "defaultValue": "SPRINGSALE10",
        "required": false
      }
    ],

    "refund": [
      {
        "name": "transaction_id",
        "type": "text",
        "label": "Original Transaction ID",
        "placeholder": "e.g. EU-ORD-2026-0001",
        "defaultValue": "EU-ORD-2026-0001",
        "required": true
      },
      {
        "name": "value",
        "type": "number",
        "label": "Refund Amount",
        "placeholder": "e.g. 199.99",
        "defaultValue": 199.99,
        "required": true
      }
    ]
  },
  "item_object": [ {
      "name": "item_id",
      "type": "text",
      "label": "Product SKU",
      "placeholder": "e.g. SKU12345",
      "required": true,
      "defaultValue": "SKU12345"
    },{
      "name": "item_name",
      "type": "text",
      "label": "Product Name",
      "placeholder": "e.g. Men's Leather Jacket",
      "required": true,
      "defaultValue": "Men's Leather Jacket"
    }, {
      "name": "item_brand",
      "type": "text",
      "label": "Brand",
      "placeholder": "e.g. EuroFashion",
      "required": false,
      "defaultValue": "EuroFashion"
    }, {
      "name": "item_category",
      "type": "text",
      "label": "Category",
      "placeholder": "e.g. Clothing > Men > Jackets",
      "required": false,
      "defaultValue": "Clothing"
    },{
      "name": "item_variant",
      "type": "text",
      "label": "Variant (Size / Color)",
      "placeholder": "e.g. Black / L",
      "required": false,
      "defaultValue": "Black / L"
    }, {
      "name": "price",
      "type": "number",
      "label": "Unit Price",
      "placeholder": "e.g. 199.99",
      "required": true,
      "defaultValue": 199.99
    },{
      "name": "quantity",
      "type": "number",
      "label": "Quantity",
      "placeholder": "e.g. 1",
      "required": true,
      "defaultValue": 1
    }
  ],
  "currency_options": [
    { "label": "Euro (EUR)", "value": "EUR" },
    { "label": "British Pound (GBP)", "value": "GBP" },
    { "label": "Emirati Dirham (AED)", "value": "AED" },
    { "label": "US Dollar (USD)", "value": "USD" }
  ]
}
